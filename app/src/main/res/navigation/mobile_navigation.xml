<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.movieapp.ui.home.HomeFragment"
        android:label="In Theater"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.movieapp.ui.dashboard.DashboardFragment"
        android:label="Up Comming"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.movieapp.ui.notifications.NotificationsFragment"
        android:label="Theaters"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.movieapp.ui.news.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.movieapp.ui.setting.SettingFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>